<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">

  <title><%= yield :title %> - Edgar</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= javascript_tag do %>
      window.Edgar = window.Edgar || {};
      Edgar.baseUrl = "<%= root_url %>";

      <% if user_signed_in? %>
        Edgar.user = <%= current_user.to_json.html_safe %>;
      <% else %>
        Edgar.user = null;
      <% end %>
  <% end %>

  <%= yield :head %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-16452055-12']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>

</head>
<body>

    <div id="header">
        <a href="<%= root_url %>">
            <%= image_tag "edgarlogo41.png", id: "edgar-logo" %>
        </a>

        <div id="user">
            <% if user_signed_in? %>
                    Logged in as <%= current_user.email %>
                    <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'logout' %>
            <% else %>
                    <%= link_to 'Log In', new_user_session_path %>
            <% end %>
        </div>
        <h1><%= yield :title %></h1>

        <%= yield :header %>
    </div>

    <div id="flash">
        <div class="wrapper">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        </div>
    </div>

    <div id="content">
        <%= yield %>
    </div>

    <div id="footer">
        <%= yield :footer %>
    </div>

</body>
</html>
